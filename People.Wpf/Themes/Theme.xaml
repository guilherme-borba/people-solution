<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Paleta -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#143551"/>
	<SolidColorBrush x:Key="PrimaryHoverBrush" Color="#497399"/>
    <SolidColorBrush x:Key="SecondaryHoverBrush" Color="#c7c3c6"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#D92D20"/>
    <SolidColorBrush x:Key="DangerHoverBrush" Color="#B42318"/>
    <SolidColorBrush x:Key="BgBrush" Color="#F5F7FA"/>
    <SolidColorBrush x:Key="CardBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextBrush" Color="#1F2937"/>
    <SolidColorBrush x:Key="SubtleTextBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="BorderBrushDefault" Color="#E5E7EB"/>

    <!-- Janela -->
    <Style TargetType="Window">
        <Setter Property="FontFamily" Value="Roboto"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Background" Value="{StaticResource BgBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- Textos -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="SectionTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="FieldLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource SubtleTextBrush}"/>
        <Setter Property="Margin" Value="0,8,0,4"/>
    </Style>

    <!-- Inputs -->
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
    </Style>

	<!-- Botão primário (base para os outros) -->
	<Style x:Key="PrimaryButton" TargetType="Button">
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="MinHeight" Value="36"/>
		<Setter Property="MinWidth" Value="110"/>
		<Setter Property="Padding" Value="16,8"/>
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
		<Setter Property="Margin" Value="0,0,8,0"/>
		<Setter Property="BorderBrush" Value="{x:Null}"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Background="{TemplateBinding Background}" CornerRadius="6">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="{StaticResource PrimaryHoverBrush}"/>
						</Trigger>
						<Trigger Property="IsEnabled" Value="False">
							<Setter Property="Opacity" Value="0.6"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Secundário: herda tamanho do primário -->
	<Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
		<Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
		<Setter Property="Background" Value="#E9EEF5"/>
	</Style>

	<!-- Perigo: herda tamanho do primário -->
	<Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
		<Setter Property="Background" Value="{StaticResource DangerBrush}"/>
		<Setter Property="Margin" Value="0"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border Background="{TemplateBinding Background}" CornerRadius="6">
						<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
					</Border>
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter Property="Background" Value="{StaticResource DangerHoverBrush}"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="AlternationCount" Value="2"/>
        <Setter Property="RowHeight" Value="32"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrushDefault}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{StaticResource BorderBrushDefault}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushDefault}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="#F3F4F6"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrushDefault}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <!-- Sem setter para AlternationIndex (é read-only) -->
    <Style TargetType="DataGridRow">
        <Style.Triggers>
            <Trigger Property="AlternationIndex" Value="1">
                <Setter Property="Background" Value="#FAFAFB"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#DCEBFA"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
